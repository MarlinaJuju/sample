<Page
    x:Class="Pi_Basket.HighScoreMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pi_Basket"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFEE1581" Offset="0.335"/>
                <GradientStop Color="#FFFFB5DA" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Rectangle Margin="20,60" Stroke="Black" Fill="#FFF4F4F5" Opacity="0.6" StrokeThickness="0"/>
        <Rectangle Fill="#FFF7FBFD" Height="78" Margin="20,60,20,0" Stroke="Black" VerticalAlignment="Top" Opacity="0.7" StrokeThickness="0"/>
        <TextBlock Margin="20,77,20,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="40" FontFamily="Tekton Pro" TextAlignment="Center" d:LayoutOverrides="LeftPosition, RightPosition" Foreground="#FFEE1581">
        	<Run FontFamily="Myriad Pro Cond" Text="High Score"/>
        </TextBlock>
        <ListBox x:ConnectionId='1' x:Name="LBHighScore" Margin="40,173,40,219" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition" Foreground="#FFFFB5DA" BorderBrush="#FFFB3369" BorderThickness="5"/>
        <Button x:ConnectionId='2' x:Name="ButBack" Content="Back" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="55,0,55,88" Background="#FFEE1581" BorderBrush="#FFCF2D7E" Foreground="#FFF5EBEB" FontSize="30" FontFamily="Calibri" Height="49" d:LayoutOverrides="LeftPosition, RightPosition"/>

    </Grid>
</Page>

